<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.popularmovies.DetailFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/movie_detail_title_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@color/color_movie_detail_title_background"
            android:paddingBottom="@dimen/movie_detail_title_padding"
            android:paddingLeft="@dimen/movie_detail_title_padding_left"
            android:paddingTop="@dimen/movie_detail_title_padding"
            android:textColor="@color/color_movie_detail_title_text"
            android:textSize="@dimen/movie_detail_title_text_size" />

        <ImageView
            android:id="@+id/movie_detail_imageview"
            android:layout_width="@dimen/movie_detail_image_width"
            android:layout_height="@dimen/movie_detail_image_height"
            android:layout_below="@id/movie_detail_title_textview"
            android:paddingLeft="@dimen/movie_detail_image_padding"
            android:paddingTop="@dimen/movie_detail_image_text_padding_top"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/movie_detail_year_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/movie_detail_title_textview"
            android:layout_marginLeft="@dimen/movie_detail_margin_left"
            android:layout_toRightOf="@id/movie_detail_imageview"
            android:paddingTop="@dimen/movie_detail_image_text_padding_top"
            android:textSize="@dimen/movie_detail_year_text_size" />

        <TextView
            android:id="@+id/movie_detail_user_rating_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/movie_detail_year_text_view"
            android:layout_marginLeft="@dimen/movie_detail_margin_left"
            android:layout_toRightOf="@id/movie_detail_imageview"
            android:paddingTop="@dimen/movie_detail_image_text_padding_top"
            android:textSize="@dimen/movie_detail_rating_text_size" />

        <TextView
            android:id="@+id/movie_detail_plot_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/movie_detail_imageview"
            android:padding="@dimen/movie_detail_plot_padding_top"
            android:textSize="@dimen/movie_detail_plot_text_size" />
    </RelativeLayout>
</ScrollView>
